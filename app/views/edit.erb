<form action="/recipes/<%= @recipe.id %>" method="POST">
    <input type="hidden" name="_method" value="PATCH">
    
    <label for="name">Recipe Name:</label><input type="text" name="name" value="<%= @recipe.name%>">
    <label for="ingredients">Recipe Ingredient:</label><input type="text" name="ingredients" value="<%= @recipe.ingredients%>">
    <label for="cook_time">Recipe Cook Time:</label><input type="text" name="cook_time" value="<%= @recipe.cook_time%>">
    
    <input type="submit"  name="Update" value="patch">
</form>


